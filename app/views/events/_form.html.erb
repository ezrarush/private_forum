<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :all_day %>
    <%= f.input :type %>
    <%= f.input :blurb %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
