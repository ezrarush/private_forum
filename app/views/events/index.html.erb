<h1>Events</h1>
<div id="calendar"></div>
<br>
<%= link_to 'New Event', new_event_path, class: "btn btn-primary btn-sm" %>
<br>
<ul>
  <% @events.each do |event| %>
    <li>
      <% if event.all_day %>
        <%= event.start_time.strftime("%B %-d, %Y, %a") %>
      <% else %>
        <%= event.start_time.strftime("%B %-d, %Y, %a %l:%M %P") %>
      <% end %>
      <%= link_to event.title, event %>
      <div class='btn-group'>
      <%= link_to 'Edit', edit_event_path(event), class: "btn btn-info btn-sm" %>
      <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
      </div>
    </li>
  <% end %>
</ul>
